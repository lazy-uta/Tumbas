<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.InvoiceFragment">


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_luar"/>


        <RelativeLayout
            android:id="@+id/tv_invoice"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="INVOICE #6"
                android:textSize="40dp"
                android:textColor="#000"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_cust"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@id/tv_invoice">

            <LinearLayout
                android:id="@+id/linear_cust"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="400dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:text="  Mie Gacoan"
                    android:paddingTop="10dp"
                    android:textSize="35dp"
                    android:textColor="#000"
                    android:drawableLeft="@drawable/logo40px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Jl. Raya Kledokan No.10, Kledokan, Caturtunggal, Depok, Sleman, DIY, 55281"
                    android:textSize="20dp"
                    />

                <TextView
                    android:layout_width="400dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:text="  Ade Praditya"
                    android:paddingTop="10dp"
                    android:textSize="35dp"
                    android:textColor="#000"
                    android:drawableLeft="@drawable/profile40px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Pemesan"
                    android:textSize="20dp"/>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_cust">

        <LinearLayout
            android:id="@+id/header_"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Pesanan"
                android:textSize="18dp"
                android:textColor="#000" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="Jumlah"
                android:textSize="18dp"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Total"
                android:textSize="20dp"
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pesanan1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_below="@id/header_pesanan">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Mie Setan Lv.4"
                android:textSize="18dp"
                android:textColor="#000" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:text="2"
                android:textSize="18dp"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Rp.18.000"
                android:textSize="20dp"
                android:textColor="#000" />

        </LinearLayout>


            <LinearLayout
                android:id="@+id/pesanan3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_below="@id/pesanan2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="Es Genderuwow"
                    android:textSize="18dp"
                    android:textColor="#000" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:text="2"
                    android:textSize="18dp"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Rp.14.000"
                    android:textSize="20dp"
                    android:textColor="#000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/header_pesanan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pesanan2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_below="@id/pesanan1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Mie Iblis Lv.4"
                    android:textSize="18dp"
                    android:textColor="#000" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:text="2"
                    android:textSize="18dp"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Rp.18.000"
                    android:textSize="20dp"
                    android:textColor="#000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/total_harga"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_below="@id/pesanan3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="Total Harga"
                    android:textSize="18dp"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="Rp.50.000"
                    android:textSize="20dp"
                    android:textColor="#000" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/diskon"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_below="@id/total_harga">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:text="Diskon"
                    android:textSize="18dp"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:text="-Rp.5.000"
                    android:textSize="20dp"
                    android:textColor="#000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/total_pembayaran"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_below="@id/diskon">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="Total Pembayaran"
                    android:textSize="18dp"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="Rp.45.000"
                    android:textSize="20dp"
                    android:textColor="#000" />

            </LinearLayout>

    </RelativeLayout>


    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


